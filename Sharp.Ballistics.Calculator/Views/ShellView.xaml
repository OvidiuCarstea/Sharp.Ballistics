<Window x:Class="Sharp.Ballistics.Calculator.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Width="800" Height="600"
         MinWidth="800" MinHeight="600"
        WindowStartupLocation="CenterScreen">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="70" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel x:Name="Functions" Orientation="Horizontal" Grid.Row="0" Margin="5">
        </StackPanel>
        <ContentControl Grid.Row="1" Margin="5" x:Name="ActiveItem" />
    </Grid>

</Window>